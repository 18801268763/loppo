{
  "name": "loppo",
  "version": "0.6.14",
  "description": "an extremely easy static site generator of markdown documents",
  "main": "index.js",
  "scripts": {
    "lint": "eslint './**/*.@(js|jsx)'",
    "lint:msg": "validate-commit-msg",
    "test": "tape test/*.test.js test/**/*.test.js | tap-spec",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "precommit": "npm run lint",
    "commitmsg": "npm run lint:msg"
  },
  "bin": {
    "loppo": "./bin/cmd.js"
  },
  "keywords": [
    "static",
    "document"
  ],
  "homepage": "https://github.com/ruanyf/loppo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruanyf/loppo.git"
  },
  "author": "Ruan Yifeng",
  "license": "GPL-3.0",
  "dependencies": {
    "connect": "^3.6.5",
    "debug": "^3.1.0",
    "fs-extra": "^4.0.3",
    "html-minifier": "^3.5.7",
    "html-to-text": "^3.0.0",
    "js-yaml": "^3.6.1",
    "lodash": "^4.16.2",
    "log-symbols": "2.x",
    "log4js": "^2.3.12",
    "loppo-theme-oceandeep": "2.x",
    "promptly": "^2.2.0",
    "serve-static": "^1.13.1",
    "tarim": "^0.1.2",
    "turpan": "^0.2.9",
    "walk-sync": "^0.3.1",
    "wordcount": "^1.1.1",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "commitizen": "^2.8.2",
    "conventional-changelog-cli": "latest",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "ghooks": "^2.0.2",
    "husky": "^0.14.3",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
