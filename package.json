{
  "name": "loppo",
  "version": "1.0.0",
  "description": "a handy static document generator",
  "main": "index.js",
  "scripts": {
    "lint": "eslint './**/*.@(js|jsx)'",
    "lint:msg": "validate-commit-msg",
    "test": "tape test/*.test.js | tap-spec",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1"
  },
  "bin": {
    "loppo": "./bin/cmd.js"
  },
  "keywords": [
    "static",
    "document"
  ],
  "author": "Ruan Yifeng",
  "license": "GPL-3.0",
  "dependencies": {
    "debug": "^2.2.0",
    "fs-extra": "^0.30.0",
    "js-yaml": "^3.6.1",
    "lodash": "^4.16.2",
    "log-symbols": "^1.0.2",
    "log4js": "^0.6.37",
    "loppo-theme-oceandeep": "^1.0.0",
    "walk-sync": "^0.3.1",
    "yargs": "^4.8.0"
  },
  "devDependencies": {
    "commitizen": "^2.8.2",
    "conventional-changelog-cli": "latest",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "2.x",
    "eslint-config-airbnb": "9.x",
    "eslint-plugin-import": "1.x",
    "eslint-plugin-jsx-a11y": "1.x",
    "eslint-plugin-react": "^5.2.2",
    "ghooks": "^1.3.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run lint:msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {}
}
